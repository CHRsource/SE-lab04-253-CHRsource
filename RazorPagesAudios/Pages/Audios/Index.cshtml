@page
@model RazorPagesAudios.Pages.Audios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="AudioGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Performer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].TracksNumbers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].TotalDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Audio[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Audio) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TracksNumbers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
